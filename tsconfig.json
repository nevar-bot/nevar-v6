{
	"compilerOptions": {
		"target": "es2021",
		"baseUrl": ".",
		"module": "es2022",
		"lib": [
			"es2021"
		],
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@root/*": [
				"*"
			],
			"@src/*": [
				"src/*"
			],
			"@commands/*": [
				"src/commands/*"
			],
			"@core/*": [
				"src/core/*"
			],
			"@database/*": [
				"src/database/*"
			],
			"@events/*": [
				"src/events/*"
			],
			"@extenders/*": [
				"src/extenders/*"
			],
			"@jobs/*": [
				"src/jobs/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	},
	"exclude": [
		"dist",
		"node_modules",
		"assets"
	]
}